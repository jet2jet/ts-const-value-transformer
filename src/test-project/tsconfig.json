{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "isolatedModules": true,
    "lib": ["ES2023"],
    "module": "node16",
    "moduleResolution": "node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "stripInternal": true,
    "target": "es2023",
    "verbatimModuleSyntax": true,
    "plugins": [
      {
        "transform": "../../dist/createTransformer.mjs",
        // specify options for test purpose
        "options": { "hoistProperty": false }
      }
    ]
  },
  "include": ["./*.mts"]
}
